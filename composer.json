{
    "name": "mjaschen/phpgeo",
    "description": "Simple Geo Library",
    "keywords": [
        "distance",
        "area",
        "coordinate",
        "geo",
        "gis",
        "bounds",
        "ellipsoid",
        "calculation",
        "polyline",
        "polygon",
        "geofence",
        "simplify",
        "length",
        "vincenty",
        "haversine",
        "bearing",
        "projection",
        "gps",
        "earth",
        "track",
        "point"
    ],
    "homepage": "https://phpgeo.marcusjaschen.de/",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcus Jaschen",
            "email": "mjaschen@gmail.com",
            "homepage": "https://www.marcusjaschen.de/"
        }
    ],
    "support" : {
        "email" : "mjaschen@gmail.com"
    },
    "require": {
        "php": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Location\\": "src/Location"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "vimeo/psalm": "^1.0"
    },
    "scripts": {
        "ci:lint": "find config src tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:psalm": "./vendor/bin/psalm",
        "ci:tests": "./vendor/bin/phpunit tests/",
        "ci:static": [
            "@ci:lint",
            "@ci:psalm"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ]
    }
}
